@model Lokanta.Models.Menu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Menu Ekle</h2>

@using (Html.BeginForm("Create","AdminMenu",FormMethod.Post,new { enctype="multipart/form-data" }))
